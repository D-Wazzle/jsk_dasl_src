<!-- Start tilt joint controller -->
<launch>
    <node name="dynamixel_manager" pkg="dynamixel_controllers" type="controller_manager.py" required="true" output="screen">
        <rosparam>
            namespace: dxl_manager
            serial_ports:
                pan_tilt_port:
                    port_name: "/dev/ttyUSB0"
                    baud_rate: 1000000
                    min_motor_id: 1
                    max_motor_id: 2
                    update_rate: 20
        </rosparam>
    </node>

    <rosparam file="$(find src_dish_mockup)/config/pan_tilt.yaml" command="load"/>

    <node name="controller_spawner" pkg="dynamixel_controllers" type="controller_spawner.py"
          args="--manager=dxl_manager
                --port dxl_USB0
                pan_controller
                tilt_controller
                "
                output="screen"/> <!-- pan_controller tilt_controller -->

    <rosparam file="$(find src_dish_mockup)/config/joints_trajectory_controller.yaml" command="load"/>
    <node name="controller_spawner_meta" pkg="dynamixel_controllers" type="controller_spawner.py"
          args="--manager=dxl_manager
                --type=meta
                pan_tilt_controller
                "
                output="screen"/> <!-- pan_controller tilt_controller -->
</launch>
